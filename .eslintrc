{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },

  "globals": {
    "require": true,
    "module": true,
    "chrome": true
  },

  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "classes": true
  },

  "plugins": [
    "react",
    "no-console-log"
  ],

  "rules": {
    "react/jsx-boolean-value": 2,
    "react/jsx-closing-bracket-location": 2,
    "react/jsx-curly-spacing": 2,
    "react/jsx-indent-props": [2, 2], // same as the "indent" setting
    "react/jsx-no-bind": 2,
    "react/jsx-no-duplicate-props": 2,
    "react/jsx-no-undef": 2,
    "react/jsx-sort-prop-types": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/no-danger": 2,
    "react/no-did-mount-set-state": 2,
    "react/no-did-update-set-state": 2,
    "react/no-direct-mutation-state": 2,
    "react/no-unknown-property": 2,
    "react/prop-types": [2, { "ignore": ["children", "history", "location"] }],
    "react/react-in-jsx-scope": 2,
    "react/require-extension": 2,
    "react/self-closing-comp": 2,
    "react/wrap-multilines": 2,
    "no-console": 0, // disable standard console lints because there is valid use for console.err, etc.
    "func-names": 0, // previously a warning, shouldn't need to name all inline functions
    "default-case": 0, // previously an error, shouldn't always need a default switch case
    "react/sort-comp": 0, // previously an error, the sorting logic is hard to satisfy and of questionable value
    "no-debugger": 2 // previously a warning, no debugger statements should get checked in ever
  },

  "extends": "airbnb"
}
